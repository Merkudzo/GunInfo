<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minWidth="310dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guns Info"
        android:textSize="21sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gun_icon"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â© 2021 merkudzo\n(Said Mammadov)"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:gravity="center"
        android:text="NOTE: Most of the information about guns\nis taken from 'wikipedia.org'"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Contact me:\n\nsaid.mammadov.94@gmail.com"
        />
    <Button
        android:id="@+id/btn_info"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:text="ok"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/for_button"
        android:layout_gravity="center"
        android:layout_margin="15dp"/>

</LinearLayout>